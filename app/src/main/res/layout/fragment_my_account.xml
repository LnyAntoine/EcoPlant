<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.myAccountFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/pfpField"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="0dp"
            android:layout_marginTop="64dp"
            android:scaleType="centerCrop"
            android:background="@drawable/pfp_style"
            android:src="@drawable/ic_launcher_foreground"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />




        <EditText

            android:id="@+id/fullNameField"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:minWidth="300dp"
            android:minHeight="50dp"

            android:layout_marginTop="32dp"
            android:background="@drawable/edit_text_style"

            android:text=""
            android:textSize="16sp"

            android:paddingStart="16dp"
            android:paddingEnd="16dp"

            android:textColor="@color/text1_black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/pfpField" />

        <EditText

            android:id="@+id/emailField"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:minWidth="300dp"
            android:minHeight="50dp"

            android:layout_marginTop="32dp"
            android:background="@drawable/edit_text_style"

            android:text=""
            android:textSize="16sp"


            android:paddingStart="16dp"
            android:paddingEnd="16dp"

            android:textColor="@color/text1_black"

            android:enabled="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fullNameField" />

        <EditText

            android:id="@+id/displayNameField"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:minWidth="300dp"
            android:minHeight="50dp"

            android:layout_marginTop="32dp"
            android:background="@drawable/edit_text_style"

            android:text=""
            android:textSize="16sp"


            android:paddingStart="16dp"
            android:paddingEnd="16dp"

            android:enabled="false"
            android:textColor="@color/text1_black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/emailField" />



        <com.google.android.material.button.MaterialButton

            android:layout_marginTop="32dp"

            android:minWidth="269dp"
            app:strokeColor="@color/stroke1_dark_green"
            app:strokeWidth="1dp"

            android:backgroundTint="@color/bg1_pale_green"
            android:textColor="@color/text1_black"

            android:text="Modifier profil"
            app:layout_constraintTop_toBottomOf="@id/displayNameField"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/editBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>



        <com.google.android.material.button.MaterialButton

            android:layout_marginTop="32dp"


            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="269dp"

            android:textColor="@color/text1_black"

            app:strokeColor="@color/stroke1_dark_green"
            app:strokeWidth="1dp"

            android:backgroundTint="@color/bg1_pale_green"

            android:text="Se dÃ©connecter"
            android:id="@+id/logoutBtn"
            android:enabled="true"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/editBtn"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>